<Window x:Class="Pr17KS.AddEditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr17KS"
        mc:Ignorable="d"
        Title="AddEditStudentWindow" Height="650" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
       
        <TextBlock Text="Группа:" Grid.Row="0" Margin="5"/>
        <TextBox x:Name="txtGroupIndex" Grid.Row="1" Margin="5"/>

        <TextBlock Text="Фамилия:" Grid.Row="2" Margin="5"/>
        <TextBox x:Name="txtLastName" Grid.Row="3" Margin="5"/>

        <TextBlock Text="Имя:" Grid.Row="4" Margin="5"/>
        <TextBox x:Name="txtFirstName" Grid.Row="5" Margin="5"/>

        <TextBlock Text="Отчество:" Grid.Row="6" Margin="5"/>
        <TextBox x:Name="txtMiddleName" Grid.Row="7" Margin="5"/>

        <TextBlock Text="Пол" Grid.Row="8" Margin="5"/>
        <TextBox x:Name="txtGender" Grid.Row="9" Margin="5"/>
        
        <TextBlock Text="Семейное положение:" Grid.Row="10" Margin="5"/>
        <TextBox x:Name="txtMaritalStatid" Grid.Row="11" Margin="5"/>

        <TextBlock Text="Оценка по математиматике:" Grid.Row="12" Margin="5"/>
        <TextBox x:Name="txtMath" Grid.Row="13" Margin="5"/>
        
        <TextBlock Text="Оценка по руссокму языку:" Grid.Row="14" Margin="5"/>
        <TextBox x:Name="txtRus" Grid.Row="15" Margin="5"/>

        <TextBlock Text="Оценка по физике:" Grid.Row="16" Margin="5"/>
        <TextBox x:Name="txtPhys" Grid.Row="17" Margin="5"/>

        <TextBlock Text="Оценка по информатике:" Grid.Row="18" Margin="5"/>
        <TextBox x:Name="txtInf" Grid.Row="19" Margin="5"/>

        <TextBlock Text="Оценка по английскому языку:" Grid.Row="20" Margin="5"/>
        <TextBox x:Name="txtEng" Grid.Row="21" Margin="5"/>

        <Button Content="Сохранить" Grid.Row="22" Margin="5" Click="Save_Click"/>
    </Grid>
</Window>
